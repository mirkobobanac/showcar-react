{
  "name": "showcar-react",
  "version": "0.0.1",
  "description": "React components for as24 showcar-ui library",
  "main": "./dist/index.js",
  "module": "./dist/index.es5.js",
  "types": "./dist/src/index.d.ts",
  "browser": "./dist/showcar-react.min.js",
  "repository": "github.com/Scout24/showcar-react",
  "author": "Inaki Anduaga <inaki.anduaga@scout24.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "docs": "docsify serve ./",
    "tslint:fix": "tslint -c ./tslint.json --fix --project ./",
    "prettier:fix": "prettier --write '*/**/*.{js,ts,tsx,json,md,scss,graphql,css}' '*.{js,ts,tsx,json,md,scss,graphql,css}'",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -s .storybook/assets",
    "gh-pages-deploy": "gh-pages -d docs --message 'Update docs & storybook' --repo 'git@github.com:Scout24/showcar-react-docs.git' --dotfiles",
    "prebuild": "rimraf dist",
    "build": "tsc --project ./tsconfig.rollup.json --declaration --module commonjs && rollup -c rollup.config.js",
    "test": "jest",
    "test:watch": "jest --notify --watch",
    "test:coverage:publish": "codecov",
    "test:prettier": "prettier --list-different '*/**/*.{js,ts,tsx,json,md,scss,graphql,css}' || (echo \"Problem with code format. Please do yarn run prettier:fix\" && exit 1)"
  },
  "dependencies": {
    "@types/node": "^10.5.2",
    "docsify-cli": "^4.2.1",
    "jest-raw-loader": "^1.0.1"
  },
  "devDependencies": {
    "@dump247/storybook-state": "^1.5.0",
    "@storybook/addon-actions": "4.0.0-alpha.14",
    "@storybook/addon-info": "^3.4.8",
    "@storybook/addon-knobs": "^3.4.8",
    "@storybook/addon-links": "^4.0.0-alpha.14",
    "@storybook/addon-options": "4.0.0-alpha.14",
    "@storybook/addon-storyshots": "4.0.0-alpha.14",
    "@storybook/addon-storysource": "4.0.0-alpha.14",
    "@storybook/addon-viewport": "4.0.0-alpha.14",
    "@storybook/addons": "^4.0.0-alpha.14",
    "@storybook/cli": "4.0.0-alpha.14",
    "@storybook/react": "^4.0.0-alpha.14",
    "@types/enzyme": "^3.1.12",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^23.3.1",
    "@types/react": "^16.4.7",
    "@types/react-dom": "^16.0.6",
    "@types/storybook__addon-actions": "^3.0.3",
    "@types/storybook__addon-info": "^3.2.3",
    "@types/storybook__addon-knobs": "^3.3.1",
    "@types/storybook__addon-links": "^3.3.1",
    "@types/storybook__addon-options": "^3.2.2",
    "@types/storybook__react": "^3.0.8",
    "awesome-typescript-loader": "^5.2.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-runtime": "^6.26.0",
    "css-loader": "^1.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "gh-pages": "^1.2.0",
    "github-markdown-css": "^2.10.0",
    "jest": "^23.4.2",
    "memfs": "^2.9.4",
    "node-sass": "^4.9.2",
    "prettier": "^1.13.7",
    "raw-loader": "^0.5.1",
    "react": "^16.4.1",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-dom": "^16.4.1",
    "react-markdown": "^3.4.1",
    "react-test-renderer": "^16.4.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.63.4",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sass": "^0.9.2",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^1.0.1",
    "rollup-plugin-typescript2": "^0.16.1",
    "rollup-plugin-visualizer": "^0.8.0",
    "sass-loader": "^7.1.0",
    "showcar-ui": "^4.3.1",
    "storybook-addon-jest": "^0.0.1",
    "storybook-addon-jsx": "^5.4.0",
    "style-loader": "^0.21.0",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-loader": "^3.6.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1",
    "typescript-parser": "^2.5.0",
    "uglify-es": "^3.3.9",
    "val-loader": "^1.1.1"
  },
  "peerDependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "showcar-ui": "^4.3.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "<rootDir>/__mocks__/styleMock.js",
      "^!raw-loader!.*$": "<rootDir>/__mocks__/styleMock.js"
    },
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "^.+\\.js$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/",
      "/.storybook/",
      "/stories/"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageReporters": [
      "cobertura",
      "html",
      "text",
      "text-summary"
    ]
  }
}
